<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://<ip>:<port>/<dbname></property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">123456</property>
        <!-- DB schema will be updated if needed -->
        <!--        <property name="hibernate.hbm2ddl.auto">update</property>-->

        <mapping class="app.models.entities.Inventory" />
        <mapping class="app.models.entities.Labor" />
        <mapping class="app.models.entities.Order" />
        <mapping class="app.models.entities.OrderDetail" />
        <mapping class="app.models.entities.OrderDeliveryDetail" />
        <mapping class="app.models.entities.Role" />
        <mapping class="app.models.entities.TransportingUnit" />
        <mapping class="app.models.entities.Warehouse" />
        <mapping class="app.models.entities.Warehouse" />
        <mapping class="app.models.entities.Inventory" />
        <mapping class="app.models.entities.WarehouseItem" />

        <mapping class="app.models.dao.RoleDao" />
        <mapping class="app.models.dao.TransportingUnitDao" />
        <mapping class="app.models.dao.LaborDao" />
        <mapping class="app.models.dao.ManagerDao" />
        <mapping class="app.models.dao.OrderDao" />
        <mapping class="app.models.dao.OrderDetailDao" />
        <mapping class="app.models.dao.WarehouseDao" />
        <mapping class="app.models.dao.WarehouseItemDao" />
        <mapping class="app.models.dao.ForecastingDao" />
    </session-factory>
</hibernate-configuration>
